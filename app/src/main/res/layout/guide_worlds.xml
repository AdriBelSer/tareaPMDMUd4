<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guideWorldsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_truly_transparent"
    android:clickable="true"
    android:focusable="true"
>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_FireSelectionWorlds"
        android:layout_width="424dp"
        android:layout_height="283dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="fire_selection_lottie.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/textStepWorlds"
        android:layout_width="248dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:background="@drawable/speech_bubble_left"
        android:gravity="center"
        android:text="@string/tv_guide_worlds"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>