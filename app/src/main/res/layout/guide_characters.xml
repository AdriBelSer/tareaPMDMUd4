<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guideCharactersLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_FireSelectionCharacter"
        android:layout_width="424dp"
        android:layout_height="283dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="fire_selection_lottie.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/textStepCharacters"
        android:layout_width="248dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:background="@drawable/speech_bubble_left"
        android:gravity="center"
        android:text="@string/tv_guide_characters"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pulseImageCharacters"
        android:layout_width="360px"
        android:layout_height="74dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/circle_focus_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_exit_guide_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="@string/btn_text_skip"
        android:textAllCaps="false"
        android:textColor="@color/dark_purple"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_next_guide_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:background="@color/dark_purple"
        android:padding="20dp"
        android:text="@string/btn_text_next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>